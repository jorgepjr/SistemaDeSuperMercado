@model SistemaDeSupermercado.Models.DTO.FornecedorDto

@{
    Layout = "~/Views/Shared/_PainelAdministrador.cshtml";

    ViewData["Title"] = "Criar novo fornecedor";
}

<h3>@ViewData["Title"]</h3>
<hr />
<form class="form-horizontal" asp-action="Salvar" asp-controller="Fornecedor">
    <input type="hidden" asp-for="Id" value="0" />
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input class="form-control" type="text" asp-for="Nome" placeholder="Nome" />
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" type="text" asp-for="Email" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone">Telefone</label>
        <input class="form-control" type="text" asp-for="Telefone" placeholder="Telefone" />
        <span class="text-danger" asp-validation-for="Telefone"></span>
    </div>

    <input type="submit" value="Salvar" class="btn btn-primary" />
</form>


