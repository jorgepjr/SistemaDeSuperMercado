@model SistemaDeSupermercado.Models.DTO.PromocaoDto

@{
    Layout = "~/Views/Shared/_PainelAdministrador.cshtml";

    ViewData["Title"] = "Criar nova promoção";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Salvar" asp-controller="Promocao">
    <input type="hidden" asp-for="Id" value="0" />
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input class="form-control" type="text" asp-for="Nome" placeholder="Nome da promoção" />
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Produtos</label>
        <select asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.Produtos, "Id", "Nome"))' class="form-control"></select>
        <span asp-validation-for="ProdutoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Porcentegem">Porcentagem</label>
        <input type="number" min="0" max="100" asp-for="Porcentegem" placeholder="%" class="form-control" />
        <span asp-validation-for="Porcentegem" class="text-danger"></span>

    </div>
    <div class="form-group">
        <button class="btn btn-success">Cadastrar</button>
    </div>
</form>
