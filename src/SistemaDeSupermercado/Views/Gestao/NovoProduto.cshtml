@model SistemaDeSupermercado.Models.DTO.ProdutoDto

@{
    Layout = "~/Views/Shared/_PainelAdministrador.cshtml";

    ViewData["Title"] = "Novo produto";
}
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Salvar" asp-controller="Produto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="nome do produto" autofocus/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Categorias</label>
                <select asp-for="CategoriaId" asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Nome"))' class="form-control"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fornecedores</label>
                <select asp-for="FornecedorId" asp-items='@(new SelectList(@ViewBag.Fornecedores, "Id", "Nome"))' class="form-control"></select>
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Preço de custo</label>
                <input asp-for="PrecoDeCusto" class="form-control" type="number" step="any" />
                <span asp-validation-for="PrecoDeCusto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Preço de venda</label>
                <input asp-for="PrecoDeVenda" class="form-control" type="number" step="any" />
                <span asp-validation-for="PrecoDeVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Medição</label>
                <select asp-for="Medicao" class="form-control">
                    <option value="0">Kilo</option>
                    <option value="1">Metro</option>
                    <option value="2">Unidade</option>
                </select>
                <span asp-validation-for="Medicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


