@model SistemaDeSupermercado.Models.DTO.ProdutoDto
@{
    Layout = "~/Views/Shared/_PainelAdministrador.cshtml";
}

<button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalAdd">Add</button>

@Html.Partial("Produtos", ViewData["Produtos"])

<!-- Modal Add -->
<div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Título do modal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja excluir?
            </div>
            <div class="modal-footer">
                <form asp-action="Salvar" asp-controller="Produto">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="0" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="nome do produto" autofocus />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categorias</label>
                        <select asp-for="CategoriaId" asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Nome"))' class="form-control"></select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fornecedores</label>
                        <select asp-for="FornecedorId" asp-items='@(new SelectList(@ViewBag.Fornecedores, "Id", "Nome"))' class="form-control"></select>
                        <span asp-validation-for="FornecedorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Preço de custo</label>
                        <input asp-for="PrecoDeCustoString" class="form-control" type="text" step="any" />
                        <span asp-validation-for="PrecoDeCustoString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Preço de venda</label>
                        <input asp-for="PrecoDeVendaString" class="form-control" type="text" step="any" />
                        <span asp-validation-for="PrecoDeVendaString" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Medição</label>
                        <select asp-for="Medicao" class="form-control">
                            <option value="0">Kilo</option>
                            <option value="1">Metro</option>
                            <option value="2">Unidade</option>
                        </select>
                        <span asp-validation-for="Medicao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
