@model IEnumerable<SistemaDeSupermercado.Models.Produto>
@{
    Layout = "~/Views/Shared/_PainelAdministrador.cshtml";
}
<h3>@ViewData["Title"]</h3>
<hr />
<a asp-action="NovoProduto" asp-controller="Gestao" class="btn btn-success">Criar novo produto</a>

<hr />

<div class="row">
    <div class="col-md-10">
        <table id="produtos" class="table table-striped table-bordered">
            <thead class="alert-success">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Fornecedor</th>
                    <th scope="col">Preço de custo</th>
                    <th scope="col">Preço de venda</th>
                    <th scope="col">Medida</th>
                    <th scope="col">Ações</th>



                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => item.Id)</td>
                        <td>@Html.DisplayFor(model => item.Nome)</td>
                        <td>@Html.DisplayFor(model => item.Categoria.Nome)</td>
                        <td>@Html.DisplayFor(model => item.Fornecedor.Nome)</td>
                        <td>@Html.DisplayFor(model => item.PrecoDeCusto)</td>
                        <td>@Html.DisplayFor(model => item.PrecoDeVenda)</td>
                        <td>
                            @if (@item.Medicao == 0)
                            {
                                <span>Kilo</span>
                            }
                            else if (item.Medicao == 1)
                            {
                                <span>Metro</span>
                            }
                            else
                            {
                                <span>Unidade</span>
                            }
                        </td>

                        <td>
                            <a class="btn btn-warning" asp-action="EditarProduto" asp-controller="Gestao" asp-route-id="@item.Id">Editar</a>
                            <form asp-action="Deletar" asp-controller="Produto" class="d-inline">
                                <input type="hidden" class="btn btn-danger" asp-action="Deletar" name="id" value="@item.Id" />
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </td>

                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#produtos').DataTable({
                "info": false,
                "language": {
                    "lengthMenu": "_MENU_ registros por página",
                    "zeroRecords": "Nenhum dado foi encontrado.",
                    "infoEmpty": "Nenhum registro disponível",
                    "search": "Buscar",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Último",
                        "next": "Próximo",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}